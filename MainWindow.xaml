        xmlns:local="clr-namespace:Projet_Grand_Slam_Cuozzo_Ruitenbeek"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid RenderTransformOrigin="0.5,0.5">
        <Button Content="Start" HorizontalAlignment="Left" Margin="200,115,0,0" VerticalAlignment="Top" Click="Button_Click"/>
