        <TextBlock x:Name="tour" HorizontalAlignment="Left" Margin="684,16,0,0" TextWrapping="Wrap" Text="Tour n° " VerticalAlignment="Top" FontWeight="Bold"/>
        <Label Content="Lancer le tour" HorizontalAlignment="Left" Margin="74,112,0,0" VerticalAlignment="Top"/>
        <Label Content="Voir Gentlemen Singmle" HorizontalAlignment="Left" Margin="66,167,0,0" VerticalAlignment="Top"/>
        <Label Content="Voir Ladies Single" HorizontalAlignment="Left" Margin="66,0,0,0" VerticalAlignment="Center"/>
        <Label Content="Voir Gentlemen Double" HorizontalAlignment="Left" Margin="66,239,0,0" VerticalAlignment="Top"/>
        <Label Content="Voir Ladies Double" HorizontalAlignment="Left" Margin="66,270,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.489,1.134"/>
        <Label Content="Voir Mixed Double" HorizontalAlignment="Left" Margin="66,306,0,0" VerticalAlignment="Top"/>
        <Button Content="Voir" HorizontalAlignment="Left" Margin="205,173,0,0" VerticalAlignment="Top" Click="AffSchedules" Tag="0"/>
        <Button Content="Voir" HorizontalAlignment="Left" Margin="205,0,0,0" VerticalAlignment="Center" Click="AffSchedules" Tag="1"/>
        <Button Content="Voir" HorizontalAlignment="Left" Margin="205,242,0,0" VerticalAlignment="Top" Click="AffSchedules" Tag="2"/>
        <Button Content="Voir" HorizontalAlignment="Left" Margin="205,273,0,0" VerticalAlignment="Top" Click="AffSchedules" Tag="3" RenderTransformOrigin="0.574,1.171"/>
        <Button Content="Voir" HorizontalAlignment="Left" Margin="205,309,0,0" VerticalAlignment="Top" Click="AffSchedules" Tag="4" RenderTransformOrigin="0.683,1.422"/>

    </Grid>

</Window>
